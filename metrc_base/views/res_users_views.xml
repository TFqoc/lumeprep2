<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="res_user_view_form_inherit_metrc" model="ir.ui.view">
		<field name="name">res.user.view.form.inherit.metrc</field>
		<field name="model">res.users</field>
		<field name="inherit_id" ref="base.view_users_form"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='login']/.." position="after">
				<group>
					<field name="metrc_account_id" options="{'no_create': True}"/>
				</group>
			</xpath>
		</field>
	</record>
</odoo>