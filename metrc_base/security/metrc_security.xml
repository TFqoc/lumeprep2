<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">

        <record model="ir.module.category" id="module_category_metrc">
            <field name="name">Metrc</field>
            <field name="description">Helps you handle Metrc Intgeration.</field>
        </record>

        <record id="group_metrc_user" model="res.groups">
            <field name="name">User</field>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="category_id" ref="metrc_base.module_category_metrc"/>
        </record>

        <record id="group_metrc_manager" model="res.groups">
            <field name="name">Manager</field>
            <field name="category_id" ref="metrc_base.module_category_metrc"/>
            <field name="implied_ids" eval="[(4, ref('metrc_base.group_metrc_user'))]"/>
        </record>

        <record id="group_metrc_admin" model="res.groups">
            <field name="name">Admin</field>
            <field name="category_id" ref="metrc_base.module_category_metrc"/>
            <field name="implied_ids" eval="[(4, ref('metrc_base.group_metrc_manager'))]"/>
            <field name="users" eval="[(4, ref('base.user_root')), (4, ref('base.user_admin'))]"/>
        </record>

    </data>
</odoo>
