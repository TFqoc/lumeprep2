<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="pos_config_form_inherit_metrc" model="ir.ui.view">
		<field name="name">pos.config.form.inherit.metrc</field>
		<field name="model">pos.config</field>
		<field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
		<field name="arch" type="xml">
			<xpath expr="//div[@id='inventory_location']" position="inside">
				<div class="col-xs-12 col-md-6 o_setting_box" title="Warehouse form where the products sold.">
                    <div class="o_setting_right_pane">
                        <label for="warehouse_id" string="Warehouse"/>
                        <div class="text-muted">
                            Warehouse form where the products sold
                        </div>
                        <div class="content-group mt16">
                            <field name="warehouse_id" required="1"/>
                        </div>
                        <div class="content-group mt16">
                            <field name="facility_license_id"/>
                        </div>
                    </div>
                </div>
			</xpath>
		</field>
	</record>
</odoo>