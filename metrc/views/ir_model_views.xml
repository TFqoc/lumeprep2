<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <record id="metrc_view_ir_model_inherit" model="ir.ui.view">
        <field name="name">metrc.ir_model.inherit</field>
        <field name="model">ir.model</field>
        <field name="inherit_id" ref="base.view_model_form"/>
        <field name="arch" type="xml">
            <field name="transient" position="after">
                <field name="is_mail_thread" attrs="{'readonly': [('state','!=', 'manual')]}" groups="base.group_no_one"/>
            </field>
        </field>
    </record>

    <record id="metrc_view_ir_model_fields_inherit" model="ir.ui.view">
        <field name="name">metrc.ir_model.fields.inherit</field>
        <field name="model">ir.model.fields</field>
        <field name="inherit_id" ref="base.view_model_fields_form"/>
        <field name="arch" type="xml">
            <field name="copied" position="after">
                <field name="metrc_field"/>
                <field name="metrc_rec_name"/>
            </field>
        </field>
    </record>

</odoo>
