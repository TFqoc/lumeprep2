<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_metrc_account_form_inherit_metrc" model="ir.ui.view">
            <field name="name">metrc.account.form.inherit.metrc</field>
            <field name="model">metrc.account</field>
            <field name="inherit_id" ref="metrc_base.view_metrc_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//div[@id='div_import_models']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="div_import_model_2">
                        <div class="o_setting_left_pane">
                            <field name="import_licenses"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="import_licenses"/>
                            <div class="text-muted">
                                Import Metrc facility licenses available to this account in facility license configuration
                            </div>
                            <div class="content-group">
                                <div class="mt8" attrs="{'invisible': [('import_licenses', '=', False)]}">
                                    <button string="Import Facility Licenses" type="object" name="do_import_licenses"
                                            icon="fa-cloud-download" class="oe_link"/>
                                </div>
                                <div>
                                    <button string="Open Facility Licenses" type="action" name="%(metrc.action_view_metrc_license)s"
                                            icon="fa-external-link" class="oe_link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-12 col-lg-6 o_setting_box" id="div_import_model_5">
                        <div class="o_setting_left_pane">
                            <field name="import_labtest_types"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="import_labtest_types"/>
                            <div class="text-muted">
                                Import Metrc labtests types reasons all active facility licenses
                            </div>
                            <div class="content-group">
                                <div class="mt8" attrs="{'invisible': [('import_labtest_types', '=', False)]}">
                                    <button string="Import Labtest Types" type="object" name="do_import_labtest_types"
                                            icon="fa-cloud-download" class="oe_link"/>
                                </div>
                                <div>
                                    <button string="Open Labtest Types" type="action" name="%(metrc.action_open_metrc_labtest_type)s"
                                            icon="fa-external-link" class="oe_link"/>
                                </div>
                            </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
