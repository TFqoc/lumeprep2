<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <record id="uom.product_uom_unit" model="uom.uom">
        	<field name="name">Each</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">ea</field>
        </record>
        <record id="uom.product_uom_floz" model="uom.uom">
        	<field name="name">Fluid Ounces</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">fl oz</field>
        </record>
        <record id="uom.product_uom_gal" model="uom.uom">
        	<field name="name">Gallons</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">gal</field>
        </record>
        <record id="uom.product_uom_gram" model="uom.uom">
        	<field name="name">Grams</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">g</field>
        </record>
        <record id="uom.product_uom_kgm" model="uom.uom">
            <field name="name">Kilograms</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">kg</field>
        </record>
        <record id="product_uom_pound" model="uom.uom">
            <field name="category_id" ref="uom.product_uom_categ_kgm"/>
            <field name="name">Pounds</field>
            <field name="factor" eval="2.20462"/>
            <field name="metrc_uom" eval="True"/>
            <field name="uom_type">bigger</field>
            <field name="abbrv_name">lb</field>
        </record>
        <record id="product_uom_metric_tons" model="uom.uom">
            <field name="category_id" ref="uom.product_uom_categ_kgm"/>
            <field name="name">Metric Tons</field>
            <field name="factor" eval="1000"/>
            <field name="metrc_uom" eval="True"/>
            <field name="uom_type">bigger</field>
            <field name="abbrv_name">mt</field>
        </record>
        <record id="uom.product_uom_litre" model="uom.uom">
            <field name="name">Liters</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">l</field>
        </record>
        <record id="product_uom_miligram" model="uom.uom">
            <field name="category_id" ref="uom.product_uom_categ_kgm"/>
            <field name="name">Milligrams</field>
            <field name="factor" eval="1000000"/>
            <field name="uom_type">smaller</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">mg</field>
        </record>
        <record id="product_uom_milliliters" model="uom.uom">
            <field name="name">Milliliters</field>
            <field name="category_id" ref="uom.product_uom_categ_vol"/>
            <field name="factor">1000</field>
            <field name="uom_type">smaller</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">ml</field>
        </record>
        <record id="uom.product_uom_oz" model="uom.uom">
            <field name="name">Ounces</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">oz</field>
        </record>
        <record id="product_uom_uspints" model="uom.uom">
            <field name="name">Pints</field>
            <field name="category_id" ref="uom.product_uom_categ_vol"/>
            <field name="factor_inv" eval="2.11338"/>
            <field name="uom_type">bigger</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">pt</field>
        </record>
        <record id="uom.product_uom_lb" model="uom.uom">
            <field name="name">lb</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">lb</field>
        </record>
        <record id="product_uom_quarts" model="uom.uom">
            <field name="name">Quarts</field>
            <field name="category_id" ref="uom.product_uom_categ_vol"/>
            <field name="factor_inv" eval="1.05669"/>
            <field name="uom_type">bigger</field>
            <field name="metrc_uom" eval="True"/>
            <field name="abbrv_name">qt</field>
        </record>
    </data>
</odoo>
