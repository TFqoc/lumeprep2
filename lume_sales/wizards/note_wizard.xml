<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="message_wizard_form" model="ir.ui.view">
            <field name="name">note.wizard.form</field>
            <field name="model">note.wizard</field>
            <field name="arch" type="xml">
                <form>
                    <h1>
                        Customer Notes
                    </h1>
                    <!-- <field name="partner_id"/> -->
                    <field name="message"/>
                    <button name="action_create_note" string="Add Note" type="object" class="btn btn-primary"/>
                    <field name="note_ids" readonly="1">
                        <kanban limit="5">
                            <field name="create_date"/>
                            <field name="logged_partner_id"/>
                            <field name="message"/>
                            <field name="completed"/>
                            <templates>
                                <t t-name="kanban-box">
                                    <div class="oe_kanban_global_click" style="width: 100%;">
                                        <div class="oe_kanban_details">
                                            <strong class="o_left"><field name="create_date"/></strong>
                                            <span style="float: right;"><field name="completed" widget="note_checkbox" nolabel="1" force_save="1"/></span>
                                            <br/>
                                            <strong><field name="logged_partner_id"/>: </strong><del t-if="record.completed.raw_value == true"><field name="message"/></del>
                                            <field t-else="" name="message"/>
                                        </div>
                                    </div>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                    <footer>
                        <button name="action_ok" string="Ok" type="object" default_focus="1" class="oe_highlight"/>
                    </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>