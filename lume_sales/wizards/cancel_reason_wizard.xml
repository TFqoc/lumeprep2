<odoo>
    <data>
        <record id="sale_order_cancel_reason_view_form" model="ir.ui.view">
            <field name="name">sale.order.cancel.reason.form</field>
            <field name="model">sale.order.cancel.reason</field>
            <field name="arch" type="xml">
                <form>
                    <p>
                        Please select a reason for abandoning this cart:<br/>
                        <field name="reason" widget="radio"/>
                    </p>
                <footer>
                    <button name="action_ok" string="Confirm" type="object" default_focus="1" class="oe_highlight"/>
                    <button string="Cancel" class="btn-secondary" type="cancel"/>
                </footer>
                </form>
            </field>
        </record>
    </data>
</odoo>