<odoo>
    <data>
        <!-- Kanban View for tasks -->
    <record id="view_project_task_kanban_inherit" model="ir.ui.view">
        <field name="name">project.task.inherit</field>
        <field name="model">project.task</field>
        <field name="inherit_id" ref="project.view_task_kanban"/>
        <field name="arch" type="xml">
           <!-- Needed field tag to access the model field later in this view -->
          <xpath expr="/kanban/field" position="after">
            <field name="order_type"/>
          </xpath>
          <!-- Reorganize title of task -->
          <xpath expr="//div[@class='o_kanban_record_headings']/*[4]" position="replace">
            <span style="font-weight: bold;">
                <field name="partner_id" widget="res_partner_many2one"/>
            </span>
          </xpath>
          <!-- Delete the else tag from the if we replaced above -->
          <xpath expr="//div[@class='o_kanban_record_headings']/*[5]" position="replace">
            <!-- Empty -->
          </xpath>
          <xpath expr="/kanban/templates/t/div//div[@class='oe_kanban_content']" position="inside">
            <!-- <field name="partner_id" widget="res_partner_many2one"/> -->
            <!-- <br/> -->
            <field name="timer_start" widget="live_timer"/>
            <br/>
            <span>
              <span t-if="record.order_type.raw_value == 'delivery'" class="fa fa-bus" title="delivery"></span>
              <span t-if="record.order_type.raw_value == 'store'" class="fa fa-cart-arrow-down" title="store"></span>
              <span t-if="record.order_type.raw_value == 'online'" class="fa fa-laptop" title="online"></span>
            </span>
            <span class="o_MessagingMenu_icon fa fa-comments" title="comment bubble"></span>
            <field name="message_unread_counter" widget="count_counter"/>
          </xpath>
          <xpath expr="(/kanban/templates/t/div//div[@class='o_kanban_record_top']/div)" position="after">
            <!-- Replace user avatar for customer "partner" avatar -->
            <img t-att-src="kanban_image('res.partner', 'image_128', record.partner_id.raw_value)" width="64" height="64" style="border-radius: 50%; margin-left: 6px; position: relative; top:auto; right:auto; display: inline-block;" class="o_m2o_avatar"/>
            <img t-if="record.partner_id.customer_type.raw_value == 'medical'" src="/lume_sales/static/src/image/leaf-icon-128.png" alt="leaf" width="32" height="32"/>
            <img t-if="record.partner_id.customer_type.raw_value == 'adult'" src="/lume_sales/static/src/image/heart-128.png" alt="heart" width="32" height="32"/>
            <img t-if="record.partner_id.customer_type.raw_value == 'caregiver'" src="/lume_sales/static/src/image/blue_cross_white_blue-128.png" alt="cross" width="32" height="32"/>
          </xpath>
          <xpath expr="(/kanban/templates/t/div//div[@class='oe_kanban_bottom_right']/field)" position="replace">
            <!-- Replace user avatar for customer "partner" avatar -->
          </xpath>
          <!-- Replace a bunch of icons we are not using -->
          <xpath expr="//div[@class='oe_kanban_bottom_left']" position="replace"></xpath>
          <!-- Color border -->
          <xpath expr="//templates/t/div" position="attributes">
            <attribute name="t-attf-style">margin-bottom: 10px; border-width: 5px; border-color: {{record.border_color}};</attribute>
            <!--<t t-set="color" t-value="margin-bottom: 10px; border-width: 5px; border-color: firebrick; {{'blue' if order_type else 'red'}}"/>-->
            <!--<t t-if="record.order_type.raw_value == 'store'">-->
            <!--  <attribute t-if="record.order_type.raw_value == 'store'" name="t-attf-style">margin-bottom: 10px; border-width: 5px; border-color: steelblue;</attribute>-->
            <!--</t>-->
            <!--<t t-elif="record.order_type.raw_value == 'curb'">-->
            <!--  <attribute t-if="record.order_type.raw_value == 'curb'" name="t-attf-style">margin-bottom: 10px; border-width: 5px; border-color: firebrick;</attribute>-->
            <!--</t>-->
            <!--<t t-elif="record.order_type.raw_value == 'delivery'">-->
            <!--  <attribute t-if="record.order_type.raw_value == 'delivery'" name="t-attf-style">margin-bottom: 10px; border-width: 5px; border-color: mediumseagreen;</attribute>-->
            <!--</t>-->
            <!--<t t-if="record.order_type.raw_value == 'online'">-->
            <!--  <attribute name="t-attf-style">margin-bottom: 10px; border-width: 5px; border-color: goldenrod;</attribute>-->
            <!--</t>-->
            <!--<attribute name="t-attf-id"><t t-esc="color"/>red</attribute>-->
          </xpath>
          <xpath expr="//progressbar" position="replace">
            <progressbar field="order_type" colors="{&quot;store&quot;: &quot;store&quot;, &quot;online&quot;: &quot;online&quot;, &quot;delivery&quot;: &quot;delivery&quot;, &quot;curb&quot;: &quot;curb&quot;}"/>
          </xpath>
        </field>
      </record>
    </data>
</odoo>