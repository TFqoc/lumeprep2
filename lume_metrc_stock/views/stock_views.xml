<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_picking_type_internal_transfers" model="ir.actions.act_window">
        <field name="name">Internal Transfers</field>
        <field name="res_model">stock.picking.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('code', '=', 'internal')]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new operation type
            </p><p>
            The operation type system allows you to assign each stock
            operation a specific type which will alter its views accordingly.
            On the operation type you could e.g. specify if packing is needed by default,
            if it should show the customer.
            </p>
        </field>
    </record>
    <record id="stock_picking_type_store_to_store_transfers" model="ir.actions.act_window">
        <field name="name">Store->Store Transfers</field>
        <field name="res_model">stock.picking.type</field>
        <field name="type">ir.actions.act_window</field>
        <field name="view_mode">kanban,form</field>
        <field name="domain">[('code', 'in', ['incoming','outgoing'])]</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
            Create a new operation type
            </p><p>
            The operation type system allows you to assign each stock
            operation a specific type which will alter its views accordingly.
            On the operation type you could e.g. specify if packing is needed by default,
            if it should show the customer.
            </p>
        </field>
    </record>
    <menuitem id="menu_metrc_receipts_stock"
        name="Receipts" sequence="2"
        parent="stock.menu_stock_warehouse_mgmt"
        groups="metrc_base.group_metrc_user">
        <menuitem id="menu_metrc_receipts_ready"
            name="Ready" sequence="1"
            action="metrc_stock.action_view_metrc_unprocessed_transfer"/>
        <menuitem id="menu_metrc_receipts_partial"
            name="Partial" sequence="2"
            action="metrc_stock.action_view_metrc_processing_transfer"/>
        <menuitem id="menu_metrc_receipts_accepted"
            name="Accepted" sequence="3"
            action="metrc_stock.action_view_metrc_transfer"/>
    </menuitem>
    <menuitem id="menu_stock_internal_transfers"
        name="Internal Transfer" sequence="3"
        action="stock_picking_type_internal_transfers"
        parent="stock.menu_stock_warehouse_mgmt"/>
    <menuitem id="menu_stock_store_to_store_transfers"
        name="Store->Store Transfers" sequence="31"
        action="stock_picking_type_store_to_store_transfers"
        parent="stock.menu_stock_warehouse_mgmt"/>
</odoo>