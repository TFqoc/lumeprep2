<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="stock_location_view_form_inherit_metrc_stock" model="ir.ui.view">
        <field name="name">stock.location.view.form.inherit.metrc_stock</field>
        <field name="model">stock.location</field>
        <field name="inherit_id" ref="stock.view_location_form"/>
        <field name="arch" type="xml">
            <group name="additional_info" position="after">
                <group string="Metrc Information" name="metrc_info"
                    attrs="{'invisible': [('usage', '!=', 'internal')]}">
                    <field name="facility_license_id" 
                        attrs="{'invisible': [('usage', '!=', 'internal')]}"/>
                    <field name="metrc_location_id" options="{'no_create': True}"
                        domain="[('facility_license_id', '=', facility_license_id)]"
                        attrs="{'required': [('facility_license_id', '!=', False)]}"/>
                </group>
            </group>
        </field>
    </record>
</odoo>