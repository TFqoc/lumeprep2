<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="package_adjust_reason_form" model="ir.ui.view">
		<field name="name">package.adjust.reason.form</field>
		<field name="model">metrc.package.adjust.reason</field>
		<field name="arch" type="xml">
			<form create="0" edit="0">
				<sheet>
					<group>
						<group>
							<field name="name"/>
							<field name="license_id"/>
						</group>
						<group>
							<field name="note_required"/>
						</group>
					</group>
				</sheet>
			</form>
		</field>
	</record>
	<record id="package_adjust_reason_tree" model="ir.ui.view">
		<field name="name">package.adjust.reason.tree</field>
		<field name="model">metrc.package.adjust.reason</field>
		<field name="arch" type="xml">
			<tree create="0" edit="0">
				<field name="name"/>
				<field name="note_required"/>
				<field name="license_id"/>
			</tree>
		</field>
	</record>
	<record id="action_open_package_adjust_reasons" model="ir.actions.act_window">
		<field name="name">Metrc Package Adjust Reason</field>
		<field name="res_model">metrc.package.adjust.reason</field>
		<field name="view_mode">tree,form</field>
		<field name="domain">[]</field>
		<field name="context">{}</field>
	</record>
	<menuitem id="menu_conf_metrc_package_adjust_reasons" action="action_open_package_adjust_reasons"
			  name="Package Adjustment Reasons" parent="metrc_base.submenu_metrc_data"/>
</odoo>