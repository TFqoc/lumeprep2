<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<!-- TODO: CIC-V13 has new view when clicking update qty
			   The logic needs to be taken into account for direct quant manipulation -->
    <record id="view_stock_quant_tree_editable_inherit_metrc" model="ir.ui.view">
		<field name="name">stock.quant.tree.editable.inherit.metrc</field>
		<field name="model">stock.quant</field>
		<field name="inherit_id" ref="stock.view_stock_quant_tree_editable"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="is_metric_product"/>
				<field name="tracking" invisible="1"/>
			</xpath>
			<field name="lot_id" position="after">
				<field name="facility_license_id" help="Metrc License to wich you make the package adjustment." attrs="{'invisible': ['|', ('tracking', '!=', 'lot'), ('is_metric_product', '=', False)], 'required': [('is_metric_product', '=', True)]}"/>
				<field name="reason_id" attrs="{'invisible': [('facility_license_id', '=', False)]}" domain="[('license_id', '=', facility_license_id)]"/>
			</field>
		</field>
	</record>
</odoo>
