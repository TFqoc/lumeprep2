        <field name="name">stock.move.line.operations.tree.inherit.metrc</field>
        <field name="model">stock.move.line</field>
        <field name="inherit_id" ref="stock.view_stock_move_line_operation_tree"/>
        <field name="arch" type="xml">
             <xpath expr="//field[@name='qty_done']" position="before">
                <field name="moving_metrc_product" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name="no_metrc" force_save="1" invisible="1"/>
            </xpath>
            <xpath expr="//field[@name='qty_done']" position="before">
                <field name="require_metrc_validation" force_save="1" invisible="1"/>
                 <field name="is_initial_demand_editable" force_save="1" invisible="1"/>
            </xpath>
            <!-- TODO: CIC verify this change to the new v12 domain is correct
                                   Replaced the first part of the domain with the new one in v12-->
            <xpath expr="//field[@name='qty_done']" position="attributes">
                 <attribute name="attrs">
                       {'readonly': ['|',
                                        '|',
                                            '|',
                                                ('is_initial_demand_editable', '=', True), '&amp;', ('state', '=', 'done'), ('is_locked', '=', True),
                                                '&amp;', ('package_level_id', '!=', False), ('parent.picking_type_entire_packs', '=', True),
                                            '&amp;','&amp;', ('moving_metrc_product','=',True), ('no_metrc','=',False),('require_metrc_validation','=',True)]}
            </attribute>
            </xpath>
        </field>
    </record>
