<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="warehouse_package_adjustment_form" model="ir.ui.view">
        <field name="name">warehouse.package.adjustment.form</field>
        <field name="model">warehouse.package.adjustment</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <field name="lot_id" readonly="1" class="oe_no_button"/>
                    <field name="product_id" readonly="1" class="oe_no_button"/>
                    <label for="metrc_quantity"/>
                    <div>
                        <field name="metrc_quantity" readonly="1" class="oe_inline" forcesave="1"/>
                        <field name="product_uom_id" readonly="1" groups="uom.group_uom" class="oe_inline oe_no_button"/>
                    </div>
                    <label for="qty_available"/>
                    <div>
                        <field name="qty_available" readonly="1" class="oe_inline" forcesave="1"/>
                        <field name="product_uom_id" readonly="1" groups="uom.group_uom" class="oe_inline oe_no_button"/>
                    </div>
                    <label for="metrc_adjust_qty"/>
                    <div>
                        <field name="metrc_adjust_qty" readonly="1" class="oe_inline" forcesave="1"/>
                        <field name="product_uom_id" readonly="1" groups="uom.group_uom" class="oe_inline oe_no_button"/>
                    </div>
                </group>
                <notebook>
                    <page name="adjustment_lines" string="Adjustment Lines">
                        <field name="line_ids" widget="one2many_list">
                            <tree editable="bottom" create="0" delete="0">
                                <field name="adjustment_id" invisible="1"/>
                                <field name="prod_lot_id" readonly="1"/>
                                <field name="location_id" readonly="1"/>
                                <field name="theoretical_qty" readonly="1"/>
                                <field name="uom_id" readonly="1"/>
                                <field name="product_qty"/>
                                <field name="uom_id" readonly="1"/>
                            </tree>
                        </field>
                    </page>
                </notebook>
                <footer>
                    <button name="perform_adjustments" string="Perform Adjustments" type="object" class="btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn-default"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_open_warehouse_package_adjustment_wizard" model="ir.actions.act_window">
        <field name="name">Warehouse Package Adjustment</field>
        <field name="res_model">warehouse.package.adjustment</field>

        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="target">new</field>
    </record>
</odoo>