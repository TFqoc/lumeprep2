<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="stock_change_product_qty_form_inherit_metrc" model="ir.ui.view">
		<field name="name">stock.change.product.qty.form.inherit.metrc</field>
		<field name="model">stock.change.product.qty</field>
		<field name="inherit_id" ref="stock.view_change_product_quantity"/>
		<field name="arch" type="xml">
			<xpath expr="//field[@name='product_id']" position="after">
				<field name="is_metric_product"/>
				<field name="tracking" invisible="1"/>
			</xpath>
			<field name="new_quantity" position="after">
				<field name="facility_license_id" help="Metrc License to wich you make the package adjustment." attrs="{'invisible': ['|', ('tracking', '!=', 'lot'), ('is_metric_product', '=', False)], 'required': [('is_metric_product', '=', True)]}"/>
				<field name="reason_id" attrs="{'invisible': [('facility_license_id', '=', False)]}" domain="[('license_id', '=', facility_license_id)]"/>
			</field>
		</field>
	</record>
</odoo>
