<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="package_change_item_view_form" model="ir.ui.view">
		<field name="name">package.change.item.view.form</field>
		<field name="model">package.item.change</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="package_label" required="1"/>
							<field name="product_id" required="1"/>
						</group>
					</group>
				</sheet>
				<footer>
					<button name="change_item_in_metrc" type="object" string="Change Item" class="btn btn-sm btn-primary"/>
                    <button string="Discard" special="cancel" class="btn btn-sm btn-default"/>
				</footer>
			</form>
		</field>
	</record>
</odoo>