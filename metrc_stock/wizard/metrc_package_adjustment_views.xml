<?xml version="1.0" encoding="UTF-8"?>
<odoo>
	<record id="package_adjustment_wizard_view_form" model="ir.ui.view">
		<field name="name">package.adjustment.wizard.view.form</field>
		<field name="model">metrc.package.adjustment</field>
		<field name="arch" type="xml">
			<form>
				<sheet>
					<group>
						<group>
							<field name="file_data" filename="file_name"/>
							<field name="file_name" invisible="1"/>
							<field name="warehouse_id" required="1"/>
						</group>
					</group>
				</sheet>
				<footer>
                    <button name="process" type="object" string="Import CSV" class="btn btn-sm btn-primary"/>
                    <button string="Discard" special="cancel" class="btn btn-sm btn-default"/>
                </footer>
			</form>
		</field>
	</record>
    <record id="action_open_package_adjust_wizard" model="ir.actions.act_window">
        <field name="name">Metrc Package Adjustments</field>
        <field name="res_model">metrc.package.adjustment</field>

        <field name="view_mode">form</field>
        <field name="context">{}</field>
        <field name="domain">[]</field>
        <field name="target">new</field>
    </record>
    <menuitem id="menu_metrc_packages_package_adjustment"
        name="Package Adjustment"
        parent="metrc.menu_metrc_inventory_item"
        action="action_open_package_adjust_wizard"
        sequence="2" groups="metrc_base.group_metrc_manager"/>
</odoo>