<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="receive_metrc_transfer_wizard_view_form" model="ir.ui.view">
        <field name="name">metrc.transfer.receive.wizard.view.form</field>
        <field name="model">metrc.transfer.receive.wizard</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                        <field name="facility_license_id" options="{'no_open': True}" readonly="1"/>
                        <field name="operation_type_id" options="{'no_open': True, 'no_create': True}"/>
                        <field name="location_dest_id" options="{'no_open': True, 'no_create': True}"/>
                    </group>
                </group>
                <footer>
                    <button string="Create Receipt" type="object" name="create_transfer"
                        class="btn btn-sm btn-primary"/>
                    <button string="Cancel" special="cancel" class="btn btn-sm btn-default"/>
                </footer>
            </form>
        </field>
    </record>
    <record id="action_open_metrc_transfer_receive_wizard" model="ir.actions.act_window">
		<field name="name">Metrc Transfer Receive Wizard</field>
		<field name="res_model">metrc.transfer.receive.wizard</field>
		<field name="view_mode">form</field>
		<field name="context">{}</field>
		<field name="domain">[]</field>
	    <field name="target">new</field>
	</record>
</odoo>