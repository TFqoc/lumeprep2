<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_metrc_product_alias_tree" model="ir.ui.view">
            <field name="name">metrc.product.alias.tree</field>
            <field name="model">metrc.product.alias</field>
            <field name="arch" type="xml">
                <tree string="Metrc Accounts">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_metrc_product_alias_search" model="ir.ui.view">
            <field name="name">metrc.product.alias.search</field>
            <field name="model">metrc.product.alias</field>
            <field name="arch" type="xml">
                <search string="Product Alias">
                    <field name="alias_name"/>
                    <field name="product_id"/>
                </search>
            </field>
        </record>

        <record id="view_metrc_product_alias_form" model="ir.ui.view">
            <field name="name">metrc.product.alias.form</field>
            <field name="model">metrc.product.alias</field>
            <field name="arch" type="xml">
                <form string="Product Alias">
                    <sheet>
                        <div class="oe_title" name="title">
                            <h1>
                                <field name="name" readonly="1"/>
                            </h1>
                        </div>
                        <group>
                            <field name="alias_name"/>
                            <field name="product_id"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <record model="ir.actions.act_window" id="action_view_metrc_product_alias">
            <field name="name">Alias</field>
            <field name="res_model">metrc.product.alias</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
            <field name="search_view_id" ref="metrc_product.view_metrc_product_alias_search"/>
            <field name="help" type="html">
                <p>
                    You will be able to create and manage mutiple Product Alias.
                </p>
            </field>
        </record>


        <menuitem id="menu_action_view_metrc_product_alias"
                action="action_view_metrc_product_alias"
                name="Product Alias"
                parent="menu_metrc_catelog_item"
                sequence="90"
                groups="metrc_base.group_metrc_manager"/>


    </data>
</odoo>
