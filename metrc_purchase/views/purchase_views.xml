<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="purchase_order_form_inherit_metrc" model="ir.ui.view">
        <field name="name">purchase.order.form.inherit.metrc</field>
        <field name="model">purchase.order</field>
        <field name="inherit_id" ref="purchase.purchase_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_ref']" position="after">
                <field name="license_vendor" invisible="1"/>
                <field name="license_require" invisible="1"/>
                <field name="partner_license_id"
                        attrs="{'invisible': [('license_require', '=', False)], 'required': [('license_require', '=', True),('state','in',['draft','sent','to_approve'])]}" 
                        domain="[('partner_id', 'child_of', partner_id)]"
                        context="{'default_partner_id': partner_id, 'default_base_type': 'External'}"/>
                <field name="facility_license_id" readonly="1" force_save="1"
                        context="{'default_base_type': 'Internal'}"
                        groups="metrc_base.group_metrc_user"/>
            </xpath>
        </field>
    </record>
</odoo>
