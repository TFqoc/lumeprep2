<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <record id="view_metrc_account_form_inherit_retail" model="ir.ui.view">
            <field name="name">metrc.account.form.inherit.retail</field>
            <field name="model">metrc.account</field>
            <field name="inherit_id" ref="metrc_base.view_metrc_account_form"/>
            <field name="arch" type="xml">
                <xpath expr="//notebook//div[@id='div_import_models']" position="inside">
                    <div class="col-12 col-lg-6 o_setting_box" id="div_import_model_7">
                        <div class="o_setting_left_pane">
                            <field name="import_customer_types"/>
                        </div>
                        <div class="o_setting_right_pane">
                            <label for="import_customer_types"/>
                            <div class="text-muted">
                                Import Metrc customer types to be used for retails customer configurations
                            </div>
                            <div class="content-group">
                                <div class="mt8" attrs="{'invisible': [('import_customer_types', '=', False)]}">
                                    <button string="Import Customer Types" type="object" name="do_import_customer_types"
                                            icon="fa-cloud-download" class="oe_link"/>
                                </div>
                                <div>
                                    <button string="Open Customer Types" type="action"  name="%(metrc_retail.action_open_metrc_customer_types)s"
                                            icon="fa-external-link"  class="oe_link"/>
                                </div>
                             </div>
                        </div>
                    </div>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
