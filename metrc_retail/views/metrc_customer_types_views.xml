<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <data>
        <record id="view_metrc_customer_types_tree" model="ir.ui.view">
            <field name="name">metrc.customer.types.view.tree</field>
            <field name="model">metrc.customer.types</field>
            <field name="arch" type="xml">
                <tree string="Customer Types" editable="top">
                    <field name="name"/>
                </tree>
            </field>
        </record>

        <record id="view_metrc_customer_types_form" model="ir.ui.view">
            <field name="name">metrc.customer.types.view.form</field>
            <field name="model">metrc.customer.types</field>
            <field name="arch" type="xml">
                <form string="Customer Type" create="false" edit="false">
                    <group>
                        <field name="name"/>
                    </group>
                </form>
            </field>
        </record>

        <record id="action_open_metrc_customer_types" model="ir.actions.act_window">
            <field name="name">Metrc Customer Types</field>
            <field name="res_model">metrc.customer.types</field>
            <field name="view_mode">tree,form</field>
            <field name="domain">[]</field>
            <field name="context">{}</field>
        </record>

        <menuitem id="menu_conf_action_open_metrc_customer_types"
                action="action_open_metrc_customer_types"
                name="Customer Types"
                parent="metrc_base.submenu_metrc_data"
                groups="metrc_base.group_metrc_manager"/>
    </data>
</odoo>