<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="invoice_form_inherit_metrc" model="ir.ui.view">
        <field name="name">account.invoice.customer.form.inherit.metrc</field>
        <field name="model">account.move</field>
        <field name="inherit_id" ref="account.view_move_form"/>
        <field name="arch" type="xml">
            <field name="partner_id" position="after">
                <field name="partner_license_id"
                        domain="[('partner_id', 'child_of', partner_id)]"
                        context="{'default_base_type': 'External'}"/>
                <field name="facility_license_id" readonly="1" groups="metrc_base.group_metrc_manager"/>
            </field>
        </field>
    </record>
</odoo>