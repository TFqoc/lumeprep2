<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <record id="sale_order_form_inherit_metrc" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.metrc</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='partner_id']" position="after">
                <field name="license_required" invisible="1"/>
                <field name="license_id"
                        attrs="{'required': [('license_required', '=', True)], 'invisible': [('license_required', '=', False)]}"
                        domain="[('partner_id', 'child_of', partner_id)]"
                        context="{'default_base_type': 'External'}"/>
                <field name="facility_license_id" readonly="1" force_save="1" groups="metrc_base.group_metrc_user"/>
            </xpath>
        </field>
    </record>
</odoo>